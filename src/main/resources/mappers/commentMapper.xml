<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.comment.mapper.CommentMapper">
 	<select id="selectCommentList" resultType="com.sns.comment.domain.Comment">
 		SELECT
	 		`id`
			, `postId`
			, `userId`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
 	</select>
 	
 	<insert id="insertComment" parameterType="map">
 		INSERT INTO `comment`
 		(
 			`postId`
			, `userId`
			, `content`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUE
 		(
 			#{postId}
 			, #{userId}
 			, #{content}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<select id="selectCommentListByPostId" parameterType="int" resultType="com.sns.comment.domain.Comment">
 		SELECT
	 		`id`
			, `postId`
			, `userId`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
		WHERE
			`postId` = #{postId}
 	</select>
 	
 	<delete id="deleteCommentByPostId" parameterType="int">
 		DELETE
		FROM	
			`comment`
		WHERE
			`postId` =  #{postId}
 	</delete>
 </mapper>